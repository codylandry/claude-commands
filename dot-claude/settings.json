{
  "permissions": {
    "allow": [
      "Read(.ai-workspace/**/*)",
      "Write(.ai-workspace/**/*)",
      "Edit(.ai-workspace/**/*)",
      "Read(~/.claude/commands/*.md)",
      "Read(~/.claude/commands/**/*.md)",
      "Read(~/.claude/agents/**/*.md)",
      "Read(~/.claude/flow/**/*)",
      "Write(~/.claude/flow/**/*)",
      "Edit(~/.claude/flow/**/*)"
    ]
  },
  "hooks": {
    "Notification": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "uv run --with requests ~/.claude/hooks/notification.py"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "uv run --with requests ~/.claude/hooks/stop.py"
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "uv run --with requests ~/.claude/hooks/subagent_stop.py"
          }
        ]
      }
    ]
  }
}